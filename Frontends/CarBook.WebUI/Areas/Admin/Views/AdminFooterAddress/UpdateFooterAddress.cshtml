@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Adres Bilgisi Güncelleme</h4>
						<p class="card-subtitle mb-4"></p>

						<form method="post">
							<input type="hidden" asp-for="FooterAddressId"/>
							<div class="form-group">
								<label for="exampleInputModel">Adres</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Address" />
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Telefon</label>
								<input type="tel" class="form-control" id="exampleInputModel" asp-for="PhoneNumber">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Email</label>
								<input type="email" class="form-control" id="exampleInputModel" asp-for="Email">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Açıklama</label>
								<textarea type="text" rows="3" class="form-control" id="exampleInputModel" asp-for="Description"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Adres Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

