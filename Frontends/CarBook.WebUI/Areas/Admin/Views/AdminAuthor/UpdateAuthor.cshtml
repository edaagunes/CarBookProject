@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yazar Güncelleme</h4>
						<p class="card-subtitle mb-4"></p>

						<form method="post">
							<input type="hidden" asp-for="AuthorId" />
							<div class="form-group">
								<label for="exampleInputModel">Yazar Adı</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Name" />
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Yazar Görsel Url</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="ImageUrl"/>
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Açıklama</label>
								<textarea type="text" rows="3" class="form-control" id="exampleInputModel" asp-for="Description"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

