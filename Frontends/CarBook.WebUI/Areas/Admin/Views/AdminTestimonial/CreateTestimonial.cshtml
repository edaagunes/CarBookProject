@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Referans Girişi</h4>
						<p class="card-subtitle mb-4"></p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputModel">Referans Adı</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Name" />
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Referans Görsel Url</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Referans Unvanı</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Yorum</label>
								<textarea type="text" rows="3" class="form-control" id="exampleInputModel" asp-for="Comment"></textarea>
							</div>						
							<button type="submit" class="btn btn-primary waves-effect waves-light">Referans Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
