@model List<ResultGetCarPricingWithTimePeriodDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük Kiralama Ücreti</th>
								<th class="bg-dark heading">Haftalık Kiralama Ücreti</th>
								<th class="bg-black heading">Aylık Kiralama Ücreti</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
									<td class="product-name">
										<br />
										<h3>@item.Model</h3>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.DailyPrice.ToString("#,##0.00")</span>
												<span class="per">/günlük</span>
											</h3>										
										</div>
									</td>
									<td class="price">
										<p class="btn-custom"><a href="#">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.WeeklyPrice.ToString("#,##0.00")</span>
												<span class="per">/haftalık</span>
											</h3>
										</div>
									</td>
									<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.MonthlyPrice.ToString("#,##0.00")</span>
												<span class="per">/aylık</span>
											</h3>
										</div>
									</td>
								</tr>
							}		
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>


