@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateCategory</h1>
<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Blog Kategori Güncelleme</h4>
						<p class="card-subtitle mb-4"></p>

						<form method="post">
							<input type="hidden" asp-for="CategoryId"/>
							<div class="form-group">
								<label for="exampleInputModel">Kategori Adı</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Name" />
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
