@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Hakkımızda Güncelleme</h4>
						<p class="card-subtitle mb-4"></p>

						<form method="post">
							<input type="hidden" asp-for="aboutId"/>
							<div class="form-group">
								<label for="exampleInputModel">Hakkımızda Başlığı</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="title" />
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Hakkımızda Açıklaması</label>
								<textarea type="text" rows="5" class="form-control" id="exampleInputModel" asp-for="description"></textarea>
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Görsel Url</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="imageUrl">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

